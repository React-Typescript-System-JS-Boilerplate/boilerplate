{
	"compilerOptions": {
		"outDir": "tmp/es6",
    	"lib": ["es5", "es2015.promise", "es2015.collection", "dom"],
		"target": "es5",
		"module": "es2015",
		"removeComments": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"inlineSourceMap": false,
		"rootDir": "./src",
		"allowSyntheticDefaultImports": true,
		"noImplicitReturns": true,
		"noImplicitThis": false,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["./src"]
}
